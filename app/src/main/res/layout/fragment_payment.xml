<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    tools:context=".ui.fragments.PaymentFragment">

    <RelativeLayout
        android:id="@+id/item1"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/rounded_box_selected"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="22sp"
                fontPath="fonts/GoogleSans_Bold.ttf"
                android:textColor="#000"
                android:text="Credit Card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingPrefix" />

            <TextView
                android:text="Your card will be charged automatically"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingPrefix" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item2"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/rounded_box"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="22sp"
                fontPath="fonts/GoogleSans_Bold.ttf"
                android:textColor="#000"
                android:text="Net Banking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingPrefix" />

            <TextView
                android:text="Pay easily without any issues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingPrefix" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item3"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/rounded_box_stroke"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                app:srcCompat="@drawable/ic_add_circle_black_24dp"
                android:layout_width="28dp"
                android:layout_height="28dp"/>

            <TextView
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                fontPath="fonts/GoogleSans_Bold.ttf"
                android:textColor="#000"
                android:text="Add new method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingPrefix" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>